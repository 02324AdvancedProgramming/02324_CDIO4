<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.thirdparty.guava.common.collect">
	<ui:style>
		.button {
			width: 6em;
			height: 3em;
			font-weight: bold;
			color: white;
			background-color: #6495ED;
			border: none;
			border-radius: 5px;
			margin-top: 1em;
			
		}
		.panel {
		    background-color: #EE82EE;
		    padding-top: 100px;
		}
	</ui:style>
	
	<g:VerticalPanel ui:field="cont"></g:VerticalPanel>
		
		
	
	<g:HTMLPanel styleName="{style.panel}">
		<table align="center" style="border-style:solid; border-width:3px; border-color:black; border-radius:10px;">
			<tr>
				<td>
					<g:VerticalPanel>
						<g:Label ui:field="id_lbl">User ID:</g:Label>
						<g:TextBox ui:field="id_box"></g:TextBox>			
						<g:Label ui:field="password_lbl">Password:</g:Label>			
						<g:TextBox ui:field="password_box"></g:TextBox>
					</g:VerticalPanel>
				</td>
			</tr>
			<tr align="right">
				<td>
					<g:Button styleName="{style.button}" ui:field="button" />		
				</td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 